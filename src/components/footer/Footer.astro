---
import offices from '../../data/js/offices.js';

// Importing the GoTopBtn component for the "Back to Top" button
import GoTopBtn from '../other/GoTopBtn.astro';

// Importing heroicons
// import { MapPinIcon, PhoneIcon, EnvelopeIcon } from '@heroicons/react/24/solid';

// Importing Lucide Icons
// import { MapPin, PhoneIcon, Mail } from 'lucide-react';

// Importing React Icons
import {
  FaTwitter,
  FaLinkedin,
  FaFacebook,
  FaSquareInstagram,
  FaInstagram,
  FaLocationDot,
  FaPhone,
  FaEnvelope,
  FaWhatsapp,
} from 'react-icons/fa6';

// Importing the SetMarginTop component for setting margin top
import SetMarginTop from '../extras/setMarginTop.astro';
---

<footer class="footer px-6 pt-8 pb-4">
  {/* Upper Section */}
  <div>
    <h2>Our Global Offices</h2>
    <div class="addDiv maxwidth mx-auto grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3">
      {
        offices.map((office) => (
          <div>
            <h3 class="officeCountry mb-2 text-center">{office.location}</h3>
            <div class="mb-2 flex">
              <div class="footerIcon text-lg">
                <FaLocationDot />
              </div>
              <a class="addDetails" href={'http://maps.google.com/?q=' + office.address} target={'_blank'}>
                {office.address}
              </a>
            </div>

            <div class="mb-2 flex">
              <div class="footerIcon text-lg">
                <FaPhone />
              </div>
              {office.phone.map((element) => (
                <a class="addDetails" href={`tel:${element}`}>
                  {element}
                </a>
              ))}
            </div>
            <div class="mb-2 flex">
              <div class="footerIcon text-lg">
                <FaEnvelope />
              </div>
              {office.email.map((element) => (
                <a class="addDetails" href={`mailto:${element}`}>
                  {element}
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>

    {/* Social media links */}
    <div class="w-full pt-4 text-center">
      <div class="flex justify-center gap-6">
        <a class="text-3xl" href="https://linkedin.com/company/indivirtus" target="_blank" aria-label="LinkedIn">
          <FaLinkedin />
        </a>
        <a class="text-3xl" href="https://twitter.com/indivirtus" target="_blank" aria-label="Twitter">
          <FaTwitter />
        </a>
        <a class="text-3xl" href="https://facebook.com/indivirtus" target="_blank" aria-label="Facebook">
          <FaFacebook />
        </a>
        <a class="text-3xl" href="https://instagram.com/indivirtus" target="_blank" aria-label="Facebook">
          <FaInstagram />
        </a>
        <a class="text-3xl" href="https://whatsapp.com/indivirtus" target="_blank" aria-label="Facebook">
          <FaWhatsapp />
        </a>
      </div>
    </div>

    <div class="footerCopyright text-center">
      &copy; {new Date().getFullYear()} Indivirtus Healthcare Services Pvt. Ltd. All rights reserved.
    </div>


---
import { internationOffices, domesticOffices } from '@/data/js/offices.js';

// Importing the GoTopBtn component for the "Back to Top" button
import GoTopBtn from '@/components/other/GoTopBtn.astro';

import Social from './SocialMedia.astro';

// Importing React Icons
import { FaLocationDot, FaPhone, FaEnvelope } from 'react-icons/fa6';

// Importing the SetMarginTop component for setting margin top
import SetMarginTop from '../extras/SetMarginTop.astro';
---

<footer class="footer px-6 pt-8 pb-4">
  {/* Upper Section */}
  <div>
    <h2>Our Global Offices</h2>
    <div class="maxwidth mx-auto mt-16">
      <div class="mb-15 grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3">
        {
          domesticOffices.map((office) => (
            <div class={`order-${office.seq.small} md:order-${office.seq.big}`}>
              <h3 class="officeCountry mb-2 text-center">{office.location ? office.location : ''}</h3>
              <div class="mb-2 flex">
                <div class="footerIcon text-lg">
                  <FaLocationDot />
                </div>
                <a
                  class="addDetails"
                  href={'http://maps.google.com/?q=' + office.address ? office.address : ''}
                  target={'_blank'}
                >
                  {office.address}
                </a>
              </div>
              <div class="mb-2 flex">
                <div class="footerIcon text-lg">{office.phone ? <FaPhone /> : ''}</div>
                <div class="flex flex-col xl:flex-row">
                  {office.phone
                    ? office.phone.map((element) => (
                        <a class="addDetails" href={`tel:${element}`}>
                          {element}
                        </a>
                      ))
                    : ''}
                </div>
              </div>
              <div class="mb-2 flex">
                <div class="footerIcon text-lg">{office.email ? <FaEnvelope /> : ''}</div>
                <div class="flex flex-col xl:flex-row">
                  {office.email
                    ? office.email.map((element) => (
                        <a class="addDetails" href={`mailto:${element}`}>
                          {element}
                        </a>
                      ))
                    : ''}
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <div class="addDivI grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
        {
          internationOffices.map((office) => (
            <div>
              <h3 class="officeCountry mb-2 text-center">{office.location ? office.location : ''}</h3>
              <div class="mb-2 flex">
                <div class="footerIcon text-lg">
                  <FaLocationDot />
                </div>
                <a
                  class="addDetails"
                  href={'http://maps.google.com/?q=' + office.address ? office.address : ''}
                  target={'_blank'}
                >
                  {office.address}
                </a>
              </div>
              <div class="mb-2 flex">
                <div class="footerIcon text-lg">{office.phone ? <FaPhone /> : ''}</div>
                <div class="flex flex-col xl:flex-row">
                  {office.phone
                    ? office.phone.map((element) => (
                        <a class="addDetails" href={`tel:${element}`}>
                          {element}
                        </a>
                      ))
                    : ''}
                </div>
              </div>
              <div class="mb-2 flex">
                <div class="footerIcon text-lg">{office.email ? <FaEnvelope /> : ''}</div>
                <div class="flex flex-col xl:flex-row">
                  {office.email
                    ? office.email.map((element) => (
                        <a class="addDetails" href={`mailto:${element}`}>
                          {element}
                        </a>
                      ))
                    : ''}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    {/* Social media links */}
    <Social />

    <div class="footerCopyright text-center">
      &copy; {new Date().getFullYear()} Indivirtus Healthcare Services Pvt. Ltd. All rights reserved.
    </div>


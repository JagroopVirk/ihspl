<style>
.footer {
  background-color: var(--color-primary);
  color: var(--color-white);

}

.footerAddress {
  color: #fff;
  font-size: var(--font-size-base);
}

.footerHeading {
  color: var(--color-secondaryOrange);
  font-size: var(--font-size-lg);
}

.footerIcon {
  min-width:15px;
  color: var(--color-white);
  margin-block: auto;
  }

.footerCopyright {
  padding-top: 1rem;
  margin-top: 2rem;
  color: rgb(from var(--color-white) r g b / 0.7);
  overflow: hidden;

  &:before {
    content: "";
    display: block;
    width: 110%;
    height: 1px;
    left: -10%;

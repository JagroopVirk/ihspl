---
import offices from "../../data/js/offices.js";
import footerData from "../../data/js/footerData.js";

// Importing the GoTopBtn component for the "Back to Top" button
import GoTopBtn from "../other/GoTopBtn.astro";

// Font Awesome
import { library, icon } from "@fortawesome/fontawesome-svg-core";

// import { faYoutube } from "@fortawesome/free-brands-svg-icons";
import { faMapMarkerAlt, faPhoneSquare, faEnvelopeSquare } from "@fortawesome/free-solid-svg-icons";
import { Fragment } from "react";

// Declare all the icons you plan on using
library.add(faPhoneSquare, faMapMarkerAlt, faEnvelopeSquare);

// Instantiate the icon with the icon function
const mapIcon = icon({ prefix: "fas", iconName: faMapMarkerAlt.iconName });
const phoneIcon = icon({ prefix: "fas", iconName: faPhoneSquare.iconName });
const emailIcon = icon({ prefix: "fas", iconName: faEnvelopeSquare.iconName });

// Importing the SetMarginTop component for setting margin top
import SetMarginTop from "../extras/setMarginTop.astro";

---

<footer class="footer px-6 pt-8 pb-4">
  <!-- Upper Section -->
  <div>
    <h2 class="text-2xl font-semibold mb-8 text-center">Our Global Offices</h2>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 max-w-6xl mx-auto"
    >
      {
        offices.map((office) => (
          <div>
           
               <h3 class="text-lg font-semibold mb-2 text-center footerHeading">{office.location}</h3>
           
               <div class="flex mb-2">
                 <div class="footerIcon">
                <Fragment set:html={mapIcon.html}/>
                 
                </div><a class="footerAddress" href={"http://maps.google.com/?q="+(office.address)} target={"_blank"}>{office.address}</a>
               </div>

               <div class="flex mb-2">
                 <div class="footerIcon">
                  <Fragment set:html={phoneIcon.html}/>
                </div><a class="footerAddress" href={"tel:"+ (office.phone)}>{office.phone}</a>
               </div>

               <div class="flex mb-2">
                 <div class="footerIcon">
                  <Fragment set:html={emailIcon.html}/>
                  </div><a class="footerAddress" href={"mailto:"+(office.email)}>{office.email}</a>
               </div>
          </div>
        ))
      }
    </div>
  </div>

  <div class="footerCopyright text-center mt-8 ">
    &copy; {new Date().getFullYear()} Indivirtus Heathcare Services Pvt. Ltd. All rights reserved.

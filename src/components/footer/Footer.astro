    {/* blank div for compensating top margin  */}
    <div id="bottomSpacing"></div>
  </div>
  <GoTopBtn />
  <SetMarginTop />

  <style>
    @reference 'tailwindcss';

    .footer {
      @apply relative;
      background-color: var(--color-primary);
      color: var(--color-white);

      & h2 {
        @apply relative z-2 mb-10 text-center;
        color: var(--color-primary);
      }

      &:after {
        @apply absolute top-0 px-6 left-1/2 -translate-x-1/2 h-24 w-82 rounded-b-xl;
        background-color: var(--color-footer-box);
        content: '';
      }
      &:before {
        @apply absolute z-1 top-0 px-6 left-1/2 -translate-x-1/2 h-[17px] w-60 rounded-t-xl;
        box-shadow:
          -300.6Q 0Q var(--color-primary),
          -280Q 0Q var(--color-footer-box),
          300.6Q 0Q var(--color-primary),
          280Q 0Q var(--color-footer-box);
        background-color: transparent;
        content: '';
      }
    }

    .officeCountry {
      color: var(--color-secondaryOrange);
    }

    .addDetails {
      @apply ml-1.5 text-sm;
      color: var(--color-white);
    }

    .addDivI * {
      @apply md:text-[95%];
    }

    .footerIcon {
      @apply align-middle relative;
      color: var(--color-white);

      svg {
        @apply relative top-1/2 -translate-1/2;
      }
    }

    .footerCopyright {
      margin-top: 2rem;
      padding-bottom: 4rem;
      overflow: hidden;
      color: rgb(from var(--color-white) r g b / 0.7);

      &:before {
        display: block;
        position: absolute;
        left: -10%;
        margin-top: -1rem;
        margin-bottom: 1rem;
        background-color: var(--color-secondaryOrange);
        width: 110%;
        height: 1px;
        content: '';
      }
    }
  </style>
</footer>

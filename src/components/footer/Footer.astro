    <div>
      <h3 class="text-xl font-semibold mb-4">About Our Company</h3>
      <p class="text-sm text-gray-400">
        We are a leading global tech company offering innovative solutions in
        web development, cloud hosting, and digital marketing. Our mission is to
        empower businesses with cutting-edge technologies.
      </p>
    </div>

    <!-- Services -->
    <div>
      <h3 class="text-xl font-semibold mb-4">Our Services</h3>
      <ul class="space-y-2">
        {
          footerData.services.map((service) => (
            <li class="text-sm text-gray-300 hover:text-white cursor-pointer">
              {service}
            </li>
          ))
        }
      </ul>
    </div>

    {
    <!-- Quick Links -->
    <div>
      <h3 class="text-xl font-semibold mb-4">Quick Links</h3>
      <ul class="space-y-2">
        {
          footerData.quickLinks.map((link) => (
            <li class="text-sm text-gray-300 hover:text-white cursor-pointer">
              {link}
            </li>
          ))
        }
      </ul>
    </div>
    } */
    }
  </div>
  <GoTopBtn />
  <SetMarginTop />

  <style>
    @reference 'tailwindcss';

    .footer {
      @apply relative;
      background-color: var(--color-primary);
      color: var(--color-white);

      & h2 {
        @apply relative z-2 mb-10 text-center;
        color: var(--color-primary);
      }

      &:after {
        @apply absolute top-0 px-6 left-1/2 -translate-x-1/2 h-24 w-82 rounded-b-xl;
        background-color: var(--color-footer-box);
        content: '';
      }
      &:before {
        @apply absolute z-1 top-0 px-6 left-1/2 -translate-x-1/2 h-4 w-60 rounded-t-xl;
        box-shadow:
          -300.6Q 0Q var(--color-primary),
          -280Q 0Q var(--color-footer-box),
          300.6Q 0Q var(--color-primary),
          280Q 0Q var(--color-footer-box);
        background-color: transparent;
        content: '';
      }
    }

    .officeCountry {
      color: var(--color-secondaryOrange);
    }

    .addDetails {
      @apply ml-1.5;
      color: var(--color-white);
    }

    .footerIcon {
      @apply align-middle relative;
      color: var(--color-white);

      svg {
        @apply relative top-1/2 -translate-1/2;
      }
    }

    .addDiv > div {
      &:nth-child(1) {
        @apply md:hidden;
      }
      &:nth-child(2) {
        @apply md:hidden;
      }
      &:nth-child(3) {
        @apply hidden md:block;
      }
      &:nth-child(4) {
        @apply hidden md:block;
      }
    }

    .footerCopyright {
      margin-top: 2rem;
      padding-top: 1rem;
      overflow: hidden;
      color: rgb(from var(--color-white) r g b / 0.7);

      &:before {
        display: block;
        position: absolute;
        left: -10%;
        margin-top: -1rem;
        margin-bottom: 1rem;
        background-color: var(--color-secondaryOrange);
        width: 110%;
        height: 1px;
        content: '';
      }
    }
  </style>
</footer>

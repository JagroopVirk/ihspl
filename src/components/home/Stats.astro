---
import Picture from 'astro/components/Picture.astro';

import AnimatedNumber from '@/components/extras/AnimatedNumber.jsx';

import { heroStats } from '@/data/js/hero.js';
---

<div class="md:mt-auto">
  <div class="my-5 flex gap-10 md:px-4 lg:flex-col">
    {
      heroStats.map((stat) => (
        <div class="flex gap-4">
          <div class="max-w-[14%]">
            <Picture src={stat.image.path} alt={stat.image.alt} />
          </div>
          <div>
            <span>
              <AnimatedNumber value={Number(stat.qty)} duration={2000} client:load />+
            </span>
            <p set:html={stat.description}>""</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  @reference "tailwindcss";
  span {
    @apply text-2xl md:text-4xl font-semibold;
  }

  p {
    @apply leading-snug;
  }
</style>

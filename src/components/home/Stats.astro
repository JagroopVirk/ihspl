---
const { heroReportsDetails } = Astro.props
import Picture from 'astro/components/Picture.astro'
import stats1 from '../../assets/stats1.svg'
import stats2 from '../../assets/stats2.svg'
---

<div class="md:mt-auto">
  <div class="my-5 flex gap-10 md:px-4 lg:flex-col">
    {/* Block 1 */}
    <div class="flex gap-4">
      {/* SVG Icon: Document with plus */}
      <div class="max-w-[14%]">
        <Picture src={stats1} alt="stats picture icon" />
      </div>
      <div>
        <h3>{heroReportsDetails.pde}+</h3>
        <p>PDE/OEL Reports as per<br />EMA/PICS/ APIC/WHO</p>
      </div>
    </div>
    {/* Block 2 */}
    <div class="flex gap-4">
      {/* SVG Icon: Checked document */}
      <div class="max-w-[14%]">
        <Picture src={stats2} alt="stats picture icon" />
      </div>
      <div>
        <h3>{heroReportsDetails.genotox}+</h3>
        <p>Mutagenic & Genotox Assessments<br />as per ICH, M7</p>
      </div>
    </div>
  </div>
</div>

<style>
  @reference "tailwindcss";
  h3 {
    @apply text-2xl md:text-4xl;
  }

  p {
    @apply leading-snug;
  }
</style>

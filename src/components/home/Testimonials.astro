---
import TestimonialCarousel from './TestimonialCarousel.jsx'
---

<section class="w-full bg-blue-50 px-6 py-16">
  <div class="mx-auto max-w-7xl text-center">
    <h2 class="mb-10 text-3xl font-bold">What Our Clients Say</h2>
    <div class="flex items-center justify-between">
      <button id="prev-testimonial" class="rounded-full bg-blue-500 p-3 text-white shadow hover:bg-blue-600">
        ‹
      </button>
      <div class="mx-4 flex-1 overflow-hidden">
        <TestimonialCarousel client:load />
      </div>
      <button id="next-testimonial" class="rounded-full bg-blue-500 p-3 text-white shadow hover:bg-blue-600">
        ›
      </button>
    </div>
  </div>
</section>

---
import Picture from 'astro/components/Picture.astro';
import { shortDescription } from '../../data/js/aboutus.js';
---

<section class="section">
  <div class="maxwidth flex justify-between">
    <div class="my-auto align-middle md:w-1/2">
      <h3 set:html={shortDescription.description} />
    </div>
    <div class="hidden md:block md:w-1/2 lg:w-1/3">
      <Picture src={shortDescription.image} alt={shortDescription.alt} />
    </div>
  </div>
</section>

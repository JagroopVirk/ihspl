---
const { setStyle } = Astro.props;

import Picture from 'astro/components/Picture.astro';
import { shortDescription } from '../../data/js/aboutus.js';
---

<section class="section" style={`background: ${setStyle}`}>
  <div class="maxwidth flex justify-between">
    <div class="my-auto align-middle md:w-1/2">
      <h3 class="py-8 leading-loose" set:html={shortDescription.description} />
      <a class={'button'} href="/about">Read more...</a>
    </div>
    <div class="hidden md:block md:w-1/2 lg:w-1/3">
      <Picture src={shortDescription.image} alt={shortDescription.alt} />
    </div>
  </div>
</section>

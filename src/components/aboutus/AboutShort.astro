---
const { setStyle } = Astro.props;

import Picture from 'astro/components/Picture.astro';
import { shortDescription } from '../../data/js/aboutus.js';
import BTN from '../other/BTN.astro';
---

<section
  class="section"
  style={`background: ${setStyle}`}
  aria-labelledby="about-intro-heading"
  aria-describedby="about-intro-description"
>
  <div class="maxwidth flex justify-between">
    <div class="my-auto align-middle md:w-1/2">
      <h3 id="about-intro-heading" class="py-6 leading-loose" set:html={shortDescription.description} />
      <div class="buttonSimple">
        <BTN
          btnLink="/about-us"
          btnClass="text-secondary"
          btnText="Learn More...."
          btnAria="Learn more about Indivirtus"
        />
      </div>
    </div>
    <div class="hidden md:block md:w-1/2 lg:w-1/3">
      <Picture src={shortDescription.image} alt={shortDescription.alt} id="about-intro-description" />
    </div>
  </div>
</section>

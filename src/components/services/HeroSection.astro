---
const { hero } = Astro.props;
---

{/* Hero Section */}

<header
  class="bg-primary-light border-primary border-b-1 py-10 text-center"
  role="banner"
  aria-labelledby="hero-heading"
  aria-describedby="hero-tagline"
>
  <div class="maxwidth">
    <h1 id="hero-heading" class="mb-4 text-4xl font-bold md:text-5xl">
      {hero.heading}
    </h1>
    <p id="hero-tagline">
      {hero.tagline}
    </p>
  </div>
</header>

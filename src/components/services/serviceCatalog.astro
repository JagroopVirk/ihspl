---
// Props: services (array of service objects)
const { services } = Astro.props;
---

<section class="section">
  <div class="maxwidth mx-auto px-4">
    <h2>Browse Our <span class="halfHeading"> Comprehensive Service Offerings</span></h2>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        services.map((service) => (
          <div class="serviceDiv">
            <div>
              <div class="serviceIcon">{service.icon}</div>
              <h3 class="serviceHeading">{service.title}</h3>
              <p class="servicePara">{service.detailedDescription}</p>
            </div>
            <div class="mt-4">
              <span class="tags">{service.reportType}</span>
            </div>
            <a class="button mt-4" href="#">
              View Details
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @reference "tailwindcss";

  h2 {
    @apply mb-8 text-center;
  }

  .serviceDiv {
    @apply flex flex-col justify-between rounded-2xl p-6 shadow-md transition hover:shadow-xl;
    background-color: var(--color-white);
  }

  .serviceIcon {
    @apply text-4xl mb-2;
  }

  .serviceHeading {
  }

  .servicePara {
    @apply mt-2;
    color: var(--color-gray);
  }

  .tags {
    @apply inline-block rounded px-2 py-1 text-xs font-medium;
    background-color: var(--color-primary-light);
    color: var(--color-primary);
  }
</style>

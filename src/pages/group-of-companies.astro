---
import Layout from '@/layouts/Layout.astro';

import CompanyCard from '@/components/companies/CompanyCard.astro';
import cards from '@/data/js/companies.js';

// Importing the SEO
import seoData from '@/data/js/seo/groupOfCompanies';

const { meta, faqSchema, gtm, pageLink, schema } = seoData;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
    ogTags: meta.ogTags,
    twitterCard: meta.twitterCard,
  }}
  gtm={gtm}
>
  <section>
    <div
      class="maxwidth mx-auto mt-36 mb-12 grid grid-cols-1 justify-items-center gap-6 px-4 sm:grid-cols-2 md:grid-cols-3"
    >
      {cards.map((card) => <CompanyCard {...card} />)}
    </div>
  </section>
</Layout>

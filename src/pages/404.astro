---
import Layout from '@/layouts/Layout.astro';

// Importing the SEO
import seoData from '@/data/js/seo/404.js';

const { meta, faqSchema, gtm, pageLink, schema } = seoData;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
    ogTags: meta.ogTags,
    twitterCard: meta.twitterCard,
  }}
  gtm={gtm}
>
  <section class="flex min-h-[60%] items-center justify-center">
    <div class="text-center">
      <h1 class="font-extrabold">404</h1>
      <p class="mt-4 font-semibold">Oops! Page not found.</p>
      <p class="mt-2 mb-6">The page you're looking for doesn't exist or has been moved.</p>
      <a href="/" class="button"> Go back to Home </a>
    </div>
  </section>
</Layout>

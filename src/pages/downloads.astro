---
import Layout from '@/layouts/Layout.astro';

import DownloadGrid from '../components/downloads/DownloadGrid.astro';

// Importing the SEO and location schema
import seoData from '@/data/js/seo/downloads.js';

const { meta, faqSchema, gtm, pageLink, schema } = seoData;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
    ogTags: meta.ogTags,
    twitterCard: meta.twitterCard,
  }}
  gtm={gtm}
>
  <section class="section">
    <div class="maxwidth">
      <h1>Brochures & <span class="halfHeading">Sample reports</span></h1>
      <DownloadGrid />
    </div>
  </section>
</Layout>

<style>
  @reference "tailwindcss";
  h1 {
    @apply mb-8 md:mb-12 text-center;
  }
</style>

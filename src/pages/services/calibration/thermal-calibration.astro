---
// Imports
import Layout from '../../../layouts/Layout.astro';
import '@/styles/global.css';

// SEO Data
import seoData from '@/data/js/services/calibration/thermal-calibration';

// Components
import Faq from '@/components/other/Faq.astro';
import BTN from '@/components/other/BTN.astro';
import HeroSection from '@/components/services/HeroSection.astro';
import MainContentSection from '@/components/services/MainContentSection.astro';
import ServiceCard from '@/components/services/ServiceCard.astro';
import ProcessSection from '@/components/services/ProcessSection.astro';
import ComplianceSection from '@/components/services/ComplianceSection.astro';
import ConclusionSection from '@/components/services/ConclusionSection.astro';
import CTASection from '@/components/services/CTASection.astro';

const { meta, image, schema, faqSchema, pageLink, full_description, deliverables, regulatory_basis, description } =
  seoData;
const { mainEntity } = faqSchema;
// const { hero, main, cards, process, compliance, conclusion, cta } = pageContent;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    image: image.path.src,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
  }}
>
  <main id="main-content" aria-labelledby="page-title">
    <!-- Hero Section -->
    <section class="bg-[var(--color-primary-light)] px-4 py-16 text-center">
      <div class="mx-auto max-w-6xl">
        <h1 class="mb-4 text-4xl font-bold text-[var(--color-primaryBlue)] md:text-5xl">
          Precision Thermal Calibration for GMP-Critical Environments
        </h1>
        <p class="mb-6 text-lg text-[var(--color-gray)] md:text-xl">
          Ensure compliance and accuracy with Indivirtus Healthcare’s NABL-accredited temperature and humidity
          calibration services.
        </p>
        <p class="mx-auto max-w-3xl text-base text-[var(--color-black)]">
          At Indivirtus Healthcare Services Pvt. Ltd., we provide ISO/IEC 17025:2017 accredited thermal calibration for
          temperature and humidity instruments, delivering pharmaceutical-grade precision for critical applications like
          stability chambers and cleanrooms.
        </p>
      </div>
    </section>

    <!-- Overview Section -->
    <section class="bg-[var(--color-white)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">
          Overview of Thermal Calibration Services
        </h2>
        <p class="mb-4 text-[var(--color-gray)]">
          <strong>What:</strong> Our NABL-accredited thermal calibration services validate temperature sensors (-80°C to
          1200°C), IR thermometers, humidity sensors (±0.8% RH), stability chambers, autoclaves, and cleanroom monitoring
          systems with high precision.
        </p>
        <p class="mb-4 text-[var(--color-gray)]">
          <strong>Why:</strong> Accurate temperature and humidity control is essential for pharmaceutical processes, ensuring
          product stability, safety, and compliance with stringent GMP and pharmacopeia standards.
        </p>
        <p class="text-[var(--color-gray)]">
          <strong>Role:</strong> We help pharmaceutical companies maintain regulatory compliance, ensure product integrity,
          and achieve audit readiness with traceable, high-precision calibration services.
        </p>
      </div>
    </section>

    <!-- Our Expert Approach Section -->
    <section class="bg-[var(--color-secondary-light2)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Our Expert Approach</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          At Indivirtus, we use SPRT primary standards, dry-block calibrators, and humidity generators traceable to
          NPL/NIST to deliver exceptional accuracy (RTDs: ±0.05°C, thermocouples: ±0.1°C, RH sensors: ±0.8%). Our team
          of certified professionals performs stability analysis and uniformity mapping to ensure your instruments meet
          the highest industry standards.
        </p>
        <p class="text-[var(--color-gray)]">
          We customize our calibration services to your specific needs, whether for autoclaves, stability chambers, or
          cleanroom systems. Our comprehensive documentation supports FDA and EMA audits, giving you confidence in your
          compliance and operational reliability.
        </p>
      </div>
    </section>

    <!-- Service Deliverables Section -->
    <section class="bg-[var(--color-white)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Service Deliverables</h2>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">NABL-accredited Calibration Certificate</h3>
              <p class="text-[var(--color-gray)]">
                Official certification ensuring compliance with ISO/IEC 17025:2017 standards.
              </p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">Measurement Uncertainty Analysis</h3>
              <p class="text-[var(--color-gray)]">
                Detailed analysis to quantify measurement reliability and accuracy.
              </p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"
              ></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">As-Found/As-Left Compliance Data</h3>
              <p class="text-[var(--color-gray)]">
                Comprehensive report comparing pre- and post-calibration measurements with compliance details.
              </p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">Temperature Uniformity Mapping Report</h3>
              <p class="text-[var(--color-gray)]">
                Detailed report assessing temperature consistency across chambers or environments.
              </p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0  está18 0z"></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">Sensor Performance Evaluation</h3>
              <p class="text-[var(--color-gray)]">
                In-depth evaluation of sensor accuracy and reliability for optimal performance.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Regulatory Compliance Section -->
    <section class="bg-[var(--color-secondary-light2)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Regulatory Compliance & Guidelines</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          Our thermal calibration services adhere to stringent global standards, ensuring your temperature and humidity
          instruments meet regulatory requirements for GMP-critical applications. We comply with:
        </p>
        <ul class="mb-4 list-disc pl-6 text-[var(--color-gray)]">
          <li><strong>ISO/IEC 17025:2017:</strong> International standard for calibration and testing laboratories.</li>
          <li><strong>NABL Accreditation:</strong> Ensures technical competence and reliability in calibration.</li>
          <li><strong>USP <660> Containers:</strong> Standards for pharmaceutical container performance.</li>
          <li>
            <strong>EP 2.2.12 Temperature:</strong> European Pharmacopoeia guidelines for temperature measurement.
          </li>
          <li><strong>21 CFR Part 11:</strong> FDA regulations for electronic records and signatures.</li>
          <li><strong>EU GMP Annex 15:</strong> European guidelines for qualification and validation.</li>
        </ul>
        <p class="text-[var(--color-gray)]">
          By adhering to these standards, we ensure your instruments are audit-ready and compliant with global market
          requirements. Our detailed documentation and traceability provide the confidence needed to pass FDA and EMA
          inspections seamlessly.
        </p>
      </div>
    </section>

    <!-- Applications & Use Cases Section -->
    <section class="bg-[var(--color-white)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Applications & Use Cases</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          Our thermal calibration services are vital for pharmaceutical companies involved in drug development,
          manufacturing, and storage. Accurate temperature and humidity control is critical for maintaining product
          stability and quality in GMP-critical environments.
        </p>
        <p class="text-[var(--color-gray)]">
          Use cases include calibrating sensors for stability chambers to ensure consistent storage conditions,
          validating autoclaves for sterilization processes, and monitoring cleanroom environments for compliance. Our
          services support regulatory audits, product launches, and global market compliance.
        </p>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="bg-[var(--color-primary-light)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Why Choose Indivirtus Healthcare</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          Our team of certified calibration experts and toxicologists brings extensive global regulatory experience to
          every project. We deliver scientifically defensible results with rapid turnaround times, ensuring your
          operations remain efficient and compliant.
        </p>
        <p class="text-[var(--color-gray)]">
          At Indivirtus, we prioritize confidentiality and adhere to industry best practices, safeguarding your
          sensitive data and equipment. Our commitment to precision, regulatory compliance, and customer satisfaction
          makes us the trusted choice for thermal calibration needs.
        </p>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <div
          class="mb-12 rounded-lg border border-[var(--color-secondary)] bg-[var(--color-secondary-light)] p-6 text-center"
        >
          <h3 class="mb-4 text-xl font-semibold text-[var(--color-black)]">
            Ready to Ensure GMP-Compliant Environments?
          </h3>
          <p class="mb-4 text-[var(--color-gray)]">
            Partner with Indivirtus for NABL-accredited thermal calibration services tailored to your pharmaceutical
            needs.
          </p>
          <BTN
            btnLink="/contact-us"
            btnClass="button bg-[var(--color-primaryBlue)] text-[var(--color-white)] hover:bg-[var(--color-primaryBlueLight)]"
            btnText="Contact Us Today"
            btnAria="Contact Indivirtus for thermal calibration services"
          />
        </div>
      </div>
    </section>

    {/* FAQ Section */}
    <section class="maxwidth" aria-labelledby="faq-heading">
      <h2 id="faq-heading" class="sr-only">Frequently Asked Questions</h2>
      <Faq faqs={mainEntity} />
    </section>
  </main>
</Layout>

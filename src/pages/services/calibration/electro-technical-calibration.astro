---
// Imports
import Layout from '../../../layouts/Layout.astro';
import '@/styles/global.css';

// SEO Data
import seoData from '@/data/js/services/calibration/electro-technical-calibration';

// Components
import Faq from '@/components/other/Faq.astro';
import BTN from '@/components/other/BTN.astro';
import HeroSection from '@/components/services/HeroSection.astro';
import MainContentSection from '@/components/services/MainContentSection.astro';
import ServiceCard from '@/components/services/ServiceCard.astro';
import ProcessSection from '@/components/services/ProcessSection.astro';
import ComplianceSection from '@/components/services/ComplianceSection.astro';
import ConclusionSection from '@/components/services/ConclusionSection.astro';
import CTASection from '@/components/services/CTASection.astro';

const { meta, image, schema, faqSchema, pageLink, full_description, deliverables, regulatory_basis, description } =
  seoData;
const { mainEntity } = faqSchema;
// const { hero, main, cards, process, compliance, conclusion, cta } = pageContent;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    image: image.path.src,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
  }}
>
  {/* Hero Section */}
  {/* <HeroSection hero={hero} /> */}

  {/* Overview Section */}
  {/* <OverviewCards overviewCards={overview.overviewCards} /> */}

  {/* Our Expert Approach Section */}
  {/* <SubSection data={approach} , bgColor="bg-secondary-light2" ariaLabel="approach" /> */}

  {/* Service Deliverables Section */}
  {/* <DeliverableCards data={deliverables} /> */}

  {/* Regulatory Compliance Section */}
  {/* <SubSection data={compliance} , bgColor="bg-secondary-light2" ariaLabel="regulations" /> */}

  {/* Applications & Use Cases Section */}
  {/* <SubSection data={applications} , bgColor="bg-white" ariaLabel="applications" /> */}

  {/* Why Choose Us Section */}
  {/* <SubSection data={conclusion} , bgColor="bg-primary-light" ariaLabel="why-us" /> */}

  {/* CTA Section */}
  {/* <CTASection cta={cta} /> */}

  <main id="main-content" aria-labelledby="page-title">
    <!-- Hero Section -->
    <section class="bg-[var(--color-primary-light)] px-4 py-16 text-center">
      <div class="mx-auto max-w-6xl">
        <h1 class="mb-4 text-4xl font-bold text-[var(--color-primaryBlue)] md:text-5xl">
          Precision Calibration for Pharmaceutical Excellence
        </h1>
        <p class="mb-6 text-lg text-[var(--color-gray)] md:text-xl">
          Ensure your equipment meets global standards with Indivirtus Healthcare’s NABL-accredited calibration
          services.
        </p>
        <p class="mx-auto max-w-3xl text-base text-[var(--color-black)]">
          At Indivirtus Healthcare Services Pvt. Ltd., we provide ISO/IEC 17025:2017 accredited electro-technical
          calibration tailored for pharmaceutical equipment, ensuring measurement accuracy and compliance with stringent
          regulatory standards.
        </p>
      </div>
    </section>

    <!-- Overview Section -->
    <section class="bg-[var(--color-white)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Overview of Calibration Services</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          <strong>What:</strong> Our NABL-accredited calibration services focus on validating critical electrical parameters
          for pharmaceutical equipment, ensuring precision in measurements for AC/DC current, voltage, resistance, inductance,
          and time/frequency.
        </p>
        <p class="mb-4 text-[var(--color-gray)]">
          <strong>Why:</strong> Accurate calibration is essential for maintaining the integrity of pharmaceutical processes,
          ensuring product safety, and meeting global regulatory requirements like GMP, WHO, and pharmacopeia standards.
        </p>
        <p class="text-[var(--color-gray)]">
          <strong>Role:</strong> We help pharmaceutical companies maintain compliance, improve operational efficiency, and
          ensure audit readiness by providing traceable, high-precision calibration services.
        </p>
      </div>
    </section>

    <!-- Our Expert Approach Section -->
    <section class="bg-[var(--color-secondary-light2)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Our Expert Approach</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          At Indivirtus, our calibration process is driven by precision and expertise. Using state-of-the-art automated
          calibration systems and certified reference standards, we validate electrical parameters with
          pharmaceutical-grade accuracy (±0.5% for current, up to 1000V for voltage, and more). Our team of certified
          professionals ensures that every calibration is traceable to NIST standards, delivering reliable results that
          meet the highest industry benchmarks.
        </p>
        <p class="text-[var(--color-gray)]">
          We take a tailored approach, understanding your equipment’s unique requirements and providing customized
          solutions to optimize performance and compliance. From laboratory instruments to production machinery, we
          ensure your equipment operates within specified tolerances, minimizing risks and enhancing quality control.
        </p>
      </div>
    </section>

    <!-- Service Deliverables Section -->
    <section class="bg-[var(--color-white)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Service Deliverables</h2>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">NABL-accredited Calibration Certificate</h3>
              <p class="text-[var(--color-gray)]">
                Official certification proving compliance with ISO/IEC 17025:2017 standards.
              </p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">Detailed Traceability Matrix</h3>
              <p class="text-[var(--color-gray)]">
                Comprehensive documentation linking measurements to NIST standards.
              </p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"
              ></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">As-Found/As-Left Data Report</h3>
              <p class="text-[var(--color-gray)]">Detailed report comparing pre- and post-calibration measurements.</p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">Measurement Uncertainty Analysis</h3>
              <p class="text-[var(--color-gray)]">In-depth analysis to quantify measurement reliability.</p>
            </div>
          </div>
          <div class="flex items-start rounded-lg bg-[var(--color-primary-light)] p-6 shadow-md">
            <svg
              class="mr-4 h-8 w-8 text-[var(--color-primaryBlue)]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
            >
            <div>
              <h3 class="text-lg font-semibold text-[var(--color-black)]">
                Recommendations for Optimal Calibration Intervals
              </h3>
              <p class="text-[var(--color-gray)]">Customized guidance to maintain equipment accuracy and compliance.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Regulatory Compliance Section -->
    <section class="bg-[var(--color-secondary-light2)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Regulatory Compliance & Guidelines</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          Our calibration services adhere to globally recognized standards, ensuring your equipment is compliant with
          regulatory requirements. We follow:
        </p>
        <ul class="mb-4 list-disc pl-6 text-[var(--color-gray)]">
          <li>
            <strong>ISO/IEC 17025:2017:</strong> The international standard for testing and calibration laboratories.
          </li>
          <li>
            <strong>NABL (ISO 17025 compliant):</strong> Accreditation ensuring technical competence and reliability.
          </li>
          <li><strong>21 CFR Part 11:</strong> U.S. FDA regulations for electronic records and signatures.</li>
          <li><strong>EU GMP Annex 11:</strong> European guidelines for computerized systems in GMP environments.</li>
          <li>
            <strong>WHO TRS 986:</strong> World Health Organization standards for pharmaceutical quality assurance.
          </li>
        </ul>
        <p class="text-[var(--color-gray)]">
          By adhering to these standards, we ensure your equipment is audit-ready and compliant with global market
          requirements. Our rigorous processes and traceability documentation provide the confidence you need to pass
          regulatory inspections and maintain product integrity.
        </p>
      </div>
    </section>

    <!-- Applications & Use Cases Section -->
    <section class="bg-[var(--color-white)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Applications & Use Cases</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          Our calibration services are essential for pharmaceutical companies involved in drug development,
          manufacturing, and quality control. Whether you’re operating a research lab, a production facility, or a
          quality assurance department, our services ensure your equipment delivers accurate and reliable results.
        </p>
        <p class="text-[var(--color-gray)]">
          Use cases include calibrating analytical instruments for drug formulation, validating production equipment for
          consistent output, and ensuring quality control devices meet pharmacopeia standards. Our services are critical
          when preparing for regulatory audits, launching new products, or maintaining compliance in global markets.
        </p>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="bg-[var(--color-primary-light)] px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <h2 class="mb-6 text-3xl font-semibold text-[var(--color-primaryBlue)]">Why Choose Indivirtus Healthcare</h2>
        <p class="mb-4 text-[var(--color-gray)]">
          Our team of certified toxicologists and calibration experts brings global regulatory experience to every
          project. We pride ourselves on delivering scientifically defensible results with fast turnaround times,
          ensuring your operations stay on track.
        </p>
        <p class="mb-4 text-[var(--color-gray)]">
          At Indivirtus, we prioritize confidentiality and adhere to industry best practices, giving you peace of mind
          that your sensitive data and equipment are in trusted hands. Our commitment to precision, compliance, and
          customer satisfaction sets us apart as a reliable partner for your calibration needs.
        </p>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="px-4 py-12">
      <div class="mx-auto max-w-6xl">
        <div
          class="mb-12 rounded-lg border border-[var(--color-secondary)] bg-[var(--color-secondary-light)] p-6 text-center"
        >
          <h3 class="mb-4 text-xl font-semibold text-[var(--color-black)]">
            Ready to Ensure Precision and Compliance?
          </h3>
          <p class="mb-4 text-[var(--color-gray)]">
            Partner with Indivirtus for NABL-accredited calibration services tailored to your pharmaceutical needs.
          </p>
          <BTN
            btnLink="/contact-us"
            btnClass="button bg-[var(--color-primaryBlue)] text-[var(--color-white)] hover:bg-[var(--color-primaryBlueLight)]"
            btnText="Contact Us Today"
            btnAria="Contact Indivirtus for calibration services"
          />
        </div>
      </div>
    </section>

    {/* FAQ Section */}
    <section class="maxwidth" aria-labelledby="faq-heading">
      <h2 id="faq-heading" class="sr-only">Frequently Asked Questions</h2>
      <Faq faqs={mainEntity} />
    </section>
  </main>
</Layout>

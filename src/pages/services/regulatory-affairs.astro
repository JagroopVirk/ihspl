    </div>

    <!-- Call to Action -->
    <div class="bg-secondary-light border-secondary mb-12 border p-6 text-center">
      <h3 class="mb-4 text-xl font-semibold">Ready to Achieve Global Regulatory Compliance?</h3>
      <p class="text-gray mb-4">Let us streamline your drug and device approvals with precision.</p>
      <BTN btnLink="/contact-us" btnClass="button" btnText="Contact Us Today" />
    </div>

    <!-- FAQ Section -->
    <section class="mx-auto max-w-7xl">
      <Faq faqs={mainEntity} />
    </section>
  </main>
</Layout>

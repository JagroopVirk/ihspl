---
import Layout from '../../layouts/Layout.astro';

import '../../styles/global.css';

// Importing SEO data for the About page
import seoData from '@/data/js/services/regulatoryAffairs';

import BTN from '@/components/other/BTN.astro';
import Faq from '@/components/other/Faq.astro';

const mainEntity = seoData.faqSchema.mainEntity;
---

<Layout
  seo={{
    title: `${seoData.meta.title} - Indivirtus`,
    description: seoData.meta.description,
    keywords: seoData.meta.keywords,
    canonical: seoData.meta.canonicalUrl,
    image: seoData.image.path.src,
    url: seoData.pageLink,
    schema: seoData.schema,
    faqSchema: seoData.faqSchema,
  }}
>
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-light border-primary border-b-4 py-10 text-center">
      <h1 class="text-primaryBlue mb-4 text-4xl font-bold md:text-5xl">
        Regulatory Compliance & Medical Device Registration
      </h1>
      <p class="text-gray mx-auto max-w-3xl text-xl md:text-2xl">Streamlined Solutions for Global Regulatory Success</p>
    </section>

    <!-- Main Content Section -->
    <div class="mx-auto max-w-7xl px-6 py-12">
      <!-- Introductory Description -->
      <section class="mb-12">
        <h2 class="text-primaryBlue mb-4 text-3xl font-semibold">Our Regulatory Compliance Services</h2>
        <p class="text-gray text-lg leading-relaxed">
          Our Contract Research Organization (CRO) provides comprehensive regulatory compliance and medical device
          registration services to help pharmaceutical and medical device companies navigate complex global regulations.
          From dossier preparation (CTD/ACTD, DMF, CEP) to medical device filings under CDSCO‚Äôs MDR-2017 rules, we
          ensure compliance with standards set by FDA, EMA, ICH, and other authorities. Our services are essential for
          ensuring product approvals, maintaining compliance, and accelerating market entry for pharmaceutical
          manufacturers, biotech firms, medical device companies, and marketing authorization holders (MAHs).
        </p>
      </section>

      <!-- Service Cards -->
      <section class="mb-12">
        <h2 class="text-primaryBlue mb-6 text-3xl font-semibold">Our Regulatory Expertise</h2>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          <!-- CTD/ACTD Dossier Preparation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üìë</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">CTD/ACTD Dossier Preparation</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>Modules 1‚Äì5 compilation</li>
              <li>ASEAN ACTD preparation</li>
              <li>eCTD/NeeS publishing</li>
              <li>Gap analysis & localization</li>
            </ul>
            <BTN btnLink="/services/ctd-actd-dossiers" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Medical Device Filing (MDR-2017) -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">ü©∫</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Medical Device Filing</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>Class A‚ÄìD classification</li>
              <li>TDF/CSDT preparation</li>
              <li>Clinical evaluation & RMF</li>
              <li>Indian Authorized Agent</li>
            </ul>
            <BTN btnLink="/services/medical-device-filing" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- CEP/DMF Filing -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üìÑ</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">CEP/DMF Filing</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>DMF Type I‚ÄìV preparation</li>
              <li>CEP submission to EDQM</li>
              <li>ASMF for EU filings</li>
              <li>Lifecycle management</li>
            </ul>
            <BTN btnLink="/services/cep-dmf-filing" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Clinical/Non-Clinical Overview -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üî¨</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Clinical/Non-Clinical Overview</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>Module 2.4 & 2.5 preparation</li>
              <li>Bioequivalence justification</li>
              <li>BCS Class I/III biowaivers</li>
              <li>Bridging study reports</li>
            </ul>
            <BTN btnLink="/services/clinical-overview" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Regulatory Responses & Remediation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üõ†Ô∏è</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Regulatory Responses</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>FDA 483 & EU LoQ responses</li>
              <li>CAPA & remediation planning</li>
              <li>Pre-submission support</li>
              <li>Labeling updates</li>
            </ul>
            <BTN btnLink="/services/regulatory-responses" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- MAH & QP Services -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">ü§ù</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">MAH & QP Services</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>EU/UK MAH representation</li>
              <li>QP for batch release</li>
              <li>PV obligation management</li>
              <li>Local EU representative</li>
            </ul>
            <BTN btnLink="/services/mah-qp-services" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Regulatory Strategy & Consulting -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üß†</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Regulatory Strategy</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>Global pathway analysis</li>
              <li>Pre-submission consultations</li>
              <li>Expedited program support</li>
              <li>Regulatory gap assessment</li>
            </ul>
            <BTN btnLink="/services/regulatory-strategy" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Lifecycle Management -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üîÑ</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Lifecycle Management</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>Variation filings</li>
              <li>Labeling & renewals</li>
              <li>Change control</li>
              <li>License renewals</li>
            </ul>
            <BTN btnLink="/services/lifecycle-management" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Product Registration & Licensing -->

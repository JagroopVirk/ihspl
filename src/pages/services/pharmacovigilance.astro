---
import Layout from '../../layouts/Layout.astro';

import '../../styles/global.css';

// Importing SEO data for the About page
import seoData from '@/data/js/services/pharmacovigilance';

import BTN from '@/components/other/BTN.astro';
import Faq from '@/components/other/Faq.astro';

const mainEntity = seoData.faqSchema.mainEntity;
---

<Layout
  seo={{
    title: `${seoData.meta.title} - Indivirtus`,
    description: seoData.meta.description,
    keywords: seoData.meta.keywords,
    canonical: seoData.meta.canonicalUrl,
    image: seoData.image.path.src,
    url: seoData.pageLink,
    schema: seoData.schema,
    faqSchema: seoData.faqSchema,
  }}
>
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-light border-primary border-b-4 py-10 text-center">
      <h1 class="text-primaryBlue mb-4 text-4xl font-bold md:text-5xl">Pharmacovigilance Services</h1>
      <p class="text-gray mx-auto max-w-3xl text-xl md:text-2xl">
        Ensuring Drug Safety with Comprehensive PV Solutions
      </p>
    </section>

    <!-- Main Content Section -->
    <div class="mx-auto max-w-7xl px-6 py-12">
      <!-- Introductory Description -->
      <section class="mb-12">
        <h2 class="text-primaryBlue mb-4 text-3xl font-semibold">Our Pharmacovigilance Services</h2>
        <p class="text-gray text-lg leading-relaxed">
          Our Contract Research Organization (CRO) provides end-to-end pharmacovigilance (PV) services to ensure drug
          safety and regulatory compliance across the product lifecycle. From database setup and adverse event reporting
          to risk management and global submissions, we help pharmaceutical companies, biotech firms, and marketing
          authorization holders (MAHs) monitor and manage drug safety effectively. Our services are critical for
          maintaining patient safety, meeting stringent regulatory requirements, and supporting clinical and
          post-marketing phases for generics, biosimilars, and innovative drugs.
        </p>
      </section>

      <!-- Service Cards -->

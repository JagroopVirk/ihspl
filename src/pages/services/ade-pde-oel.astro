---
// Imports
import Layout from '../../layouts/Layout.astro';
import '../../styles/global.css';

// SEO Data
import seoData from '@/data/js/services/adepde.js';

// Components
import BTN from '@/components/other/BTN.astro';
import Faq from '@/components/other/Faq.astro';

const { meta, image, schema, faqSchema, pageLink } = seoData;
const { mainEntity } = faqSchema;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    image: image.path.src,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
  }}
>
  <main>
    <!-- Hero Section -->
    <header class="bg-primary-light border-primary border-b-4 py-12 text-center">
      <div class="container mx-auto px-4">
        <h1 class="text-primaryBlue mb-4 text-4xl leading-tight font-bold md:text-5xl">
          Toxicological Safety & Regulatory Documentation
        </h1>
        <p class="text-gray mx-auto max-w-3xl text-xl md:text-2xl">
          Comprehensive support for pharmaceutical safety and compliance
        </p>
      </div>
    </header>
    <div class="maxwidth">
      <!-- Main Content -->

---
import Layout from '../../layouts/Layout.astro';

import '../../styles/global.css';

// Importing SEO data
import seoData from '@/data/js/services/containmentValidation';

import BTN from '@/components/other/BTN.astro';
import Faq from '@/components/other/Faq.astro';

const mainEntity = seoData.faqSchema.mainEntity;
---

<Layout
  seo={{
    title: `${seoData.meta.title} - Indivirtus`,
    description: seoData.meta.description,
    keywords: seoData.meta.keywords,
    canonical: seoData.meta.canonicalUrl,
    image: seoData.image.path.src,
    url: seoData.pageLink,
    schema: seoData.schema,
    faqSchema: seoData.faqSchema,
  }}
>
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-light border-primary border-b-4 py-10 text-center">
      <h1 class="text-primaryBlue mb-4 text-4xl font-bold md:text-5xl">Isolator Containment Validation Services</h1>
      <p class="text-gray mx-auto max-w-3xl text-xl md:text-2xl">
        Safeguarding Your Operations with Expert Containment Solutions
      </p>
    </section>

    <!-- Main Content Section -->
    <div class="mx-auto max-w-7xl px-6 py-12">
      <!-- Introductory Description -->
      <section class="mb-12">
        <h2 class="text-primaryBlue mb-4 text-3xl font-semibold">Our Isolator Validation Services</h2>
        <p class="text-gray text-lg leading-relaxed">
          Our Contract Research Organization (CRO) provides specialized isolator containment validation services to
          ensure the safe handling of potent compounds (OEB 3+) in pharmaceutical manufacturing. From surrogate powder
          testing to airflow visualization and operator safety assessments, our services protect workers, prevent
          environmental contamination, and ensure compliance with global standards like ISPE SMEPAC and cGMP. These
          solutions are essential for pharmaceutical manufacturers, biotech firms, and CROs working with high-potency
          active pharmaceutical ingredients (HPAPIs), helping them maintain safety, quality, and regulatory compliance.
        </p>
      </section>

      <!-- Service Cards -->
      <section class="mb-12">
        <h2 class="text-primaryBlue mb-6 text-3xl font-semibold">Our Comprehensive Validation Services</h2>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">

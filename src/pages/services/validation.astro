---
import Layout from '../../layouts/Layout.astro';

import '../../styles/global.css';

// Importing SEO data for the About page
import seoData from '@/data/js/services/validation';

import BTN from '@/components/other/BTN.astro';
import Faq from '@/components/other/Faq.astro';

const mainEntity = seoData.faqSchema.mainEntity;
---

<Layout
  seo={{
    title: `${seoData.meta.title} - Indivirtus`,
    description: seoData.meta.description,
    keywords: seoData.meta.keywords,
    canonical: seoData.meta.canonicalUrl,
    image: seoData.image.path.src,
    url: seoData.pageLink,
    schema: seoData.schema,
    faqSchema: seoData.faqSchema,
  }}
>
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-light border-primary border-b-4 py-10 text-center">
      <h1 class="text-primaryBlue mb-4 text-4xl font-bold md:text-5xl">Validation Services for Pharma & Biotech</h1>
      <p class="text-gray mx-auto max-w-3xl text-xl md:text-2xl">
        Ensuring Compliance for Critical Systems and Processes
      </p>
    </section>

    <!-- Main Content Section -->
    <div class="mx-auto max-w-7xl px-6 py-12">
      <!-- Introductory Description -->
      <section class="mb-12">
        <h2 class="text-primaryBlue mb-4 text-3xl font-semibold">Our Validation Services</h2>
        <p class="text-gray text-lg leading-relaxed">
          Our Contract Research Organization (CRO) offers comprehensive validation services for pharmaceutical and
          biotech systems, including laboratory instruments, process automation, HVAC, and enterprise applications.
          These services ensure compliance with global regulatory standards, maintain data integrity, and support
          operational excellence. Our solutions are critical for pharmaceutical manufacturers, biotech firms, CROs, and
          medical device companies seeking to meet stringent requirements from FDA, EMA, and other authorities while
          ensuring system reliability and product quality.
        </p>
      </section>

      <!-- Service Cards -->
      <section class="mb-12">
        <h2 class="text-primaryBlue mb-6 text-3xl font-semibold">Our Validation Expertise</h2>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          <!-- Laboratory Systems Validation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üî¨</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Laboratory Systems Validation</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>DQ/IQ/OQ/PQ for HPLC, GC, etc.</li>
              <li>ICH Q2 method validation</li>
              <li>21 CFR Part 11 compliance</li>
              <li>Software validation (Empower)</li>
            </ul>
            <BTN btnLink="/services/lab-systems-validation" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Process Automation Systems Validation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">‚öôÔ∏è</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Process Automation Validation</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>PLC/HMI/SCADA validation</li>
              <li>GAMP 5 risk-based approach</li>
              <li>FS/DS documentation</li>
              <li>Cybersecurity verification</li>
            </ul>
            <BTN btnLink="/services/process-automation-validation" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Environmental Monitoring System Validation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üå°Ô∏è</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">EMS Validation</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>IQ/OQ/PQ & software validation</li>
              <li>BMS/HVAC integration</li>
              <li>21 CFR Part 11 compliance</li>
              <li>Sensor calibration</li>
            </ul>
            <BTN btnLink="/services/ems-validation" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Enterprise Application Validation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üíª</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Enterprise Application Validation</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>CSV for SAP, LIMS, QMS</li>
              <li>21 CFR Part 11 compliance</li>
              <li>Risk & data integrity audits</li>
              <li>URS to summary reports</li>
            </ul>
            <BTN btnLink="/services/enterprise-app-validation" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Temperature Mapping & Thermal Validation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="text-primary mb-4 text-4xl">üìè</div>
            <h3 class="text-primaryBlue mb-2 text-xl font-bold">Temperature Mapping</h3>
            <ul class="text-gray mb-4 list-inside list-disc">
              <li>Autoclave, tunnel validation</li>
              <li>Cold room & warehouse mapping</li>
              <li>Data logger calibration</li>
              <li>Graphical data analysis</li>
            </ul>
            <BTN btnLink="/services/temperature-mapping" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- HVAC System Validation -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">

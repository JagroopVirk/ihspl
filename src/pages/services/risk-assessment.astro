---
import Layout from '../../layouts/Layout.astro';

import '../../styles/global.css';

// Importing SEO data for the About page
import seoData from '@/data/js/services/riskAssessment';

import BTN from '@/components/other/BTN.astro';
import Faq from '@/components/other/Faq.astro';

const mainEntity = seoData.faqSchema.mainEntity;
---

<Layout
  seo={{
    title: `${seoData.meta.title} - Indivirtus`,
    description: seoData.meta.description,
    keywords: seoData.meta.keywords,
    canonical: seoData.meta.canonicalUrl,
    image: seoData.image.path.src,
    url: seoData.pageLink,
    schema: seoData.schema,
    faqSchema: seoData.faqSchema,
  }}
>
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-light border-primary border-b-4 py-10 text-center">
      <h1 class="text-primary mb-4 text-4xl font-bold md:text-5xl">Cutting-Edge CRO Solutions for Pharmaceuticals</h1>
      <p class="text-xl text-gray-600 md:text-2xl">
        Unrivaled expertise in genotoxic impurity evaluation and toxicological risk assessment.
      </p>
    </section>

    <!-- Main Content -->
    <div class="mx-auto max-w-7xl px-6 py-12">
      <!-- Introductory Description -->
      <section class="mb-12">
        <h2 class="text-primary mb-4 text-3xl font-semibold">Why Our CRO Services Stand Out</h2>
        <p class="text-gray text-lg">
          Indivirtus provides specialized CRO services, delivering precision in genotoxic impurity evaluation,
          toxicological risk assessments, and extractables and leachables (E&L) studies. These services empower
          pharmaceutical companies, biotech innovators, and medical device manufacturers to achieve compliance with
          stringent global regulations while ensuring patient safety. By integrating advanced analytics, computational
          toxicology, and rigorous testing, we streamline drug and device development, helping clients bring safe,
          high-quality products to market efficiently.
        </p>
      </section>

      <!-- Service Cards -->
      <section class="mb-12">
        <h2 class="text-primary mb-6 text-3xl font-semibold">Tailored CRO Services</h2>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          <!-- Impurity Profiling -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="mb-4 text-4xl">üß™</div>
            <h3 class="text-primary mb-2 text-xl font-bold">Impurity Profiling</h3>
            <ul class="text-gray mb-4 list-disc pl-5">
              <li>Precise identification via LC-MS/MS, GC-MS, NMR, HRMS</li>
              <li>Threshold of Toxicological Concern (TTC) analysis</li>
              <li>Robust impurity qualification studies</li>
            </ul>
            <BTN btnLink="/services/impurity-profiling" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- In Silico (Q)SAR Assessment -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="mb-4 text-4xl">üíª</div>
            <h3 class="text-primary mb-2 text-xl font-bold">In Silico (Q)SAR Assessment</h3>
            <ul class="text-gray mb-4 list-disc pl-5">
              <li>Advanced toxicity predictions with Derek Nexus, Leadscope</li>
              <li>Dual-model approach: rule-based and statistical</li>
              <li>ICH M7-compliant mutagenicity reports</li>
            </ul>
            <BTN btnLink="/services/qsar-assessment" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- In Vitro Genotoxicity Testing -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="mb-4 text-4xl">üß¨</div>
            <h3 class="text-primary mb-2 text-xl font-bold">In Vitro Genotoxicity Testing</h3>
            <ul class="text-gray mb-4 list-disc pl-5">
              <li>Ames Test (OECD 471) for mutagenicity</li>
              <li>Mouse Lymphoma Assay (OECD 490)</li>
              <li>GLP-compliant, high-precision studies</li>
            </ul>
            <BTN btnLink="/services/in-vitro-testing" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- In Vivo Genotoxicity Testing -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="mb-4 text-4xl">üêÅ</div>
            <h3 class="text-primary mb-2 text-xl font-bold">In Vivo Genotoxicity Testing</h3>
            <ul class="text-gray mb-4 list-disc pl-5">
              <li>In vivo Micronucleus Test (OECD 474)</li>
              <li>Comet Assay (OECD 489) for DNA damage</li>
              <li>Transgenic Rodent Mutation Assays</li>
            </ul>
            <BTN btnLink="/services/in-vivo-testing" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Extractables and Leachables Studies -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="mb-4 text-4xl">‚öóÔ∏è</div>
            <h3 class="text-primary mb-2 text-xl font-bold">Extractables and Leachables Studies</h3>
            <ul class="text-gray mb-4 list-disc pl-5">
              <li>ISO 10993-18 chemical characterization</li>
              <li>Simulated-use extraction for real-world insights</li>
              <li>Advanced GC-MS, LC-MS/MS analysis</li>
            </ul>
            <BTN btnLink="/services/e-and-l-studies" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>

          <!-- Toxicological Risk Assessment -->
          <div class="bg-secondary-light2 border-gray rounded-lg border p-6 shadow-md">
            <div class="mb-4 text-4xl">üìä</div>
            <h3 class="text-primary mb-2 text-xl font-bold">Toxicological Risk Assessment</h3>
            <ul class="text-gray mb-4 list-disc pl-5">
              <li>Tolerable Intake and PDE calculations</li>
              <li>Route-specific safety evaluations</li>
              <li>Cramer Classification for unquantified substances</li>
            </ul>
            <BTN btnLink="/services risked-assessment" btnClass="buttonSimple" btnText="Read more‚Ä¶" />
          </div>
        </div>
      </section>

      <!-- Process Section -->
      <section class="bg-primary-light border-primary mb-12 rounded-lg border p-8">
        <h2 class="text-primary mb-6 text-3xl font-semibold">How We Deliver Excellence</h2>
        <ol class="text-gray list-decimal space-y-4 pl-5">
          <li><strong>Project Onboarding:</strong> Align with clients on objectives and regulatory needs.</li>
          <li><strong>Data Acquisition:</strong> Leverage cutting-edge analytics and in silico tools.</li>
          <li><strong>Testing Phase:</strong> Conduct OECD-compliant in vitro and in vivo trials.</li>
          <li><strong>Regulatory Support:</strong> Prepare ICH-compliant documentation for global submissions.</li>
          <li><strong>Final Delivery:</strong> Provide actionable risk assessments and stability reports.</li>
        </ol>
      </section>

      <!-- Compliance & Guidelines -->
      <section class="mb-12">
        <h2 class="text-primary mb-6 text-3xl font-semibold">Global Compliance, Assured</h2>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <div>
            <h3 class="text-primary mb-2 text-xl font-bold">Regulatory Oversight</h3>
            <ul class="text-gray list-disc pl-5">
              <li>FDA (U.S. Food and Drug Administration)</li>
              <li>EMA (European Medicines Agency)</li>
              <li>CDSCO (India‚Äôs Regulatory Authority)</li>
              <li>PMDA (Japan‚Äôs Regulatory Authority)</li>
            </ul>
          </div>
          <div>
            <h3 class="text-primary mb-2 text-xl font-bold">Standards & Certifications</h3>
            <ul class="text-gray list-disc pl-5">
              <li>ICH Q3A, Q3B, Q3C, M7 for impurities</li>
              <li>ISO 10993 for medical device safety</li>
              <li>GLP-certified laboratories</li>
              <li>ISO 14971 risk management framework</li>
            </ul>
          </div>
        </div>
        <p class="text-gray mt-4">
          Serving pharmaceuticals, biotech, and medical device sectors with unwavering compliance.
        </p>
      </section>

      <!-- Conclusion -->
      <section class="mb-12">
        <h2 class="text-primary mb-4 text-3xl font-semibold">Your Trusted CRO Partner</h2>
        <p class="text-gray text-lg">
          Indivirtus combines scientific rigor with regulatory expertise to deliver CRO services that ensure your
          pharmaceutical and medical device products are safe, compliant, and market-ready. Our advanced analytical
          tools, global compliance know-how, and commitment to precision make us the ideal partner to accelerate your
          development journey with confidence.
        </p>
      </section>
    </div>
    <!-- Call to Action Section -->
    <div class="bg-secondary-light border-secondary mb-12 border p-6 text-center">
      <h3 class="mb-4 text-xl font-semibold">Ready to Advance Your Research?</h3>
      <p class="text-gray mb-4">Partner with Indivirtus for innovative, compliant CRO solutions.</p>
      <BTN btnLink="/contact-us" btnClass="button" btnText="Contact Us Today" />
    </div>

    <section class="maxwidth">
      <!-- FAQ Section -->
      <Faq faqs={mainEntity} />
    </section>
  </main>
</Layout>

---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/header/Header.astro';
import Footer from '@/components/footer/Footer.astro';

import TermsPayments from '@/components/aboutus/Terms&Payments.astro';

// Importing the SEO
import seoData from '@/data/js/seo/aboutus/tearmsPolicy.js';

const { meta, faqSchema, gtm, pageLink, schema } = seoData;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
    ogTags: meta.ogTags,
    twitterCard: meta.twitterCard,
  }}
  gtm={gtm}
>
  <Header />
  <TermsPayments />
  <Footer />
</Layout>

---
import Layout from "../layouts/Layout.astro";
import Header from "../components/header/Header.astro";
import Footer from "../components/footer/Footer.astro";
import ServiceCatalog from "../components/services/serviceCatalog.astro";  
import "../styles/global.css";

// Importing the default SEO and location schema
import { servicesPageSeo } from "../data/js/siteSeo.js";
import {  pdeReports } from "../data/js/servicesSchemaSEO.js";
import {  services } from "../data/js/services.js";

// importing the shuffle function
import { shuffleArray } from "../utils/shuffle.js";

---

<Layout seo={{ ...servicesPageSeo, canonical: servicesPageSeo.url, servicesSchema: pdeReports}}>
  <Header />
  <main>
    <ServiceCatalog services={shuffleArray(services)} />
  </main>
  <Footer />
</Layout>

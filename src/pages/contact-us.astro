---
import Layout from '@/layouts/Layout.astro';

import ContactForm from '@/components/contact/ContactForm.astro';
import GoogleMap from '@/components/contact/GoogleMap.astro';

// Importing the SEO
import seoData from '@/data/js/seo/contact-us.js';

const { meta, faqSchema, gtm, pageLink, schema } = seoData;
---

<Layout
  seo={{
    title: `${meta.title} - Indivirtus`,
    description: meta.description,
    keywords: meta.keywords,
    canonical: meta.canonicalUrl,
    url: pageLink,
    schema: schema,
    faqSchema: faqSchema,
    ogTags: meta.ogTags,
    twitterCard: meta.twitterCard,
  }}
  gtm={gtm}
>
  <section class="section">
    <h1 class="mb-8 text-center">
      Contact <span class="halfHeading">Indivirtus Healthcare Services</span>
    </h1>
    <div class="maxwidth flex flex-col gap-8 p-10 md:flex-row-reverse">
      <ContactForm slideDirection="right" />
      <GoogleMap />
    </div>
  </section>
</Layout>
